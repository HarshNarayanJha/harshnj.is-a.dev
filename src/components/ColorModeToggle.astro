---
interface Props {
  class?: string
  [key: string]: any
}

import { Toggle } from "astro-theme-toggle"

const { class: className = "", ...rest } = Astro.props
---

<!-- TODO: Tidy up the SVGs -->
<div class:list={["relative", className]} {...rest} data-tippy-content="Toggle color mode">
  <svg
    xmlns="http://www.w3.org/2000/svg"
    aria-hidden="true"
    width="1.7em"
    height="1.7em"
    class="absolute top-0 left-0 will-change-transform"
    fill="currentColor"
    viewBox="0 0 32 32"
  >
    <path
      d="M16 9c3.9 0 7 3.1 7 7s-3.1 7-7 7"
      class="origin-center rotate-0 transition-transform duration-500 will-change-transform dark:-rotate-180"></path>
    <path
      d="M16 .5C7.4.5.5 7.4.5 16S7.4 31.5 16 31.5 31.5 24.6 31.5 16 24.6.5 16 .5zm0 28.1V23c-3.9 0-7-3.1-7-7s3.1-7 7-7V3.4C23 3.4 28.6 9 28.6 16S23 28.6 16 28.6z"
      class="origin-center rotate-0 transition-transform duration-500 will-change-transform dark:-rotate-180"></path>
  </svg>
  <Toggle class="cursor-pointer">
    <Fragment slot="icon-light">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        aria-hidden="true"
        width="1.7em"
        height="1.7em"
        class="inline-flex will-change-transform"
        fill="currentColor"
        viewBox="0 0 32 32"
      >
        <path
          d="M16 9c3.9 0 7 3.1 7 7s-3.1 7-7 7"
          class="origin-center rotate-0 transition-transform duration-300 will-change-transform dark:rotate-180"></path>
        <path
          d="M16 .5C7.4.5.5 7.4.5 16S7.4 31.5 16 31.5 31.5 24.6 31.5 16 24.6.5 16 .5zm0 28.1V23c-3.9 0-7-3.1-7-7s3.1-7 7-7V3.4C23 3.4 28.6 9 28.6 16S23 28.6 16 28.6z"
          class="origin-center rotate-0 transition-transform duration-300 will-change-transform dark:-rotate-180"
        ></path>
      </svg>
    </Fragment>
    <Fragment slot="icon-dark">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        aria-hidden="true"
        width="1.7em"
        height="1.7em"
        class="inline-flex will-change-transform"
        fill="currentColor"
        viewBox="0 0 32 32"
      >
        <path
          d="M16 9c3.9 0 7 3.1 7 7s-3.1 7-7 7"
          class="origin-center rotate-0 transition-transform duration-300 will-change-transform dark:rotate-180"></path>
        <path
          d="M16 .5C7.4.5.5 7.4.5 16S7.4 31.5 16 31.5 31.5 24.6 31.5 16 24.6.5 16 .5zm0 28.1V23c-3.9 0-7-3.1-7-7s3.1-7 7-7V3.4C23 3.4 28.6 9 28.6 16S23 28.6 16 28.6z"
          class="origin-center rotate-0 transition-transform duration-300 will-change-transform dark:-rotate-180"
        ></path>
      </svg>
    </Fragment>
  </Toggle>
</div>
