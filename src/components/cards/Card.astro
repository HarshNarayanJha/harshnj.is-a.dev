---
import TransparentBorder from "@/components/reusable/TransparentBorder.astro"

interface Props {
  class: string
  [key: string]: any
}

const { class: className, ...rest } = Astro.props
---

<TransparentBorder class={className} {rest}>
  <div
    class="flex h-full flex-col items-center justify-start gap-8 rounded-lg border-2 border-slate-300/50 bg-white p-12 shadow-lg will-change-transform md:flex-row md:p-4 dark:border-zinc-700/50 dark:bg-gray-950"
  >
    <div id="leading-image">
      <slot name="image" />
    </div>
    <div id="text-content" class="mt-2">
      <slot name="title" />
      <slot name="text" />
    </div>
  </div>
</TransparentBorder>
