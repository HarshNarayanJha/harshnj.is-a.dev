---
import TransparentBorder from "@components/reusable/TransparentBorder.astro"

interface Props {
  class: string
  [key: string]: any
}

const { class: className, ...rest } = Astro.props
---

<TransparentBorder class={className} {rest}>
  <div
    class="flex h-full flex-col items-start justify-start gap-4 rounded-lg border-2 border-slate-300/50 bg-white p-4 shadow md:flex-row md:gap-8 md:p-2 dark:border-zinc-800/50 dark:bg-gray-950"
  >
    <div id="leading-image" class="self-center">
      <slot name="image" />
    </div>
    <div id="text-content" class="mt-2 w-full sm:mt-4">
      <slot name="title" />
      <slot name="text" />
    </div>
  </div>
</TransparentBorder>
