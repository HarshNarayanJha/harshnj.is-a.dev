---
import TransparentBorder from "@/components/reusable/TransparentBorder.astro"

interface Props {
  class: string
  [key: string]: any
}

const { class: className, ...rest } = Astro.props
---

<TransparentBorder class={className} enableHoverScale={true} {rest}>
  <div
    class="flex flex-col-reverse items-start justify-start gap-4 rounded-lg border-2 border-slate-300/50 bg-white p-4 pt-2 shadow transition-transform hover:scale-[98%] md:h-52 md:flex-row md:gap-8 md:p-4 dark:border-zinc-800/50 dark:bg-gray-950"
  >
    <div class="flex h-full w-full flex-col items-start justify-start">
      <div>
        <slot name="date" />
        <slot name="title" />
        <slot name="text" />
      </div>
      <div class="mt-auto">
        <slot name="tags" />
      </div>
    </div>
    <div class="self-center">
      <slot name="image" />
    </div>
  </div>
</TransparentBorder>
