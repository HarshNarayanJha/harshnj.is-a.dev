---
import TransparentBorder from "@/components/reusable/TransparentBorder.astro"

interface Props {
  class: string
  [key: string]: any
}

const { class: className, ...rest } = Astro.props
---

<TransparentBorder class={className} {rest}>
  <div
    class="flex h-full flex-col items-start justify-between gap-4 rounded-lg border-2 border-neutral-300/50 bg-white px-8 py-8 shadow-sm transition-shadow duration-75 hover:shadow-md sm:gap-8 md:px-6 dark:border-zinc-800/80 dark:bg-gray-950"
  >
    <div class="mt-2 w-full sm:mt-0">
      <slot name="text" />
    </div>

    <div class="flex flex-row items-center justify-start gap-4">
      <slot name="image" />
      <div>
        <slot name="name" />
        <slot name="at" />
      </div>
    </div>
  </div>
</TransparentBorder>
